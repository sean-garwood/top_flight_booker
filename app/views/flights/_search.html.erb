<h2>Enter your desired flight attributes here.</h2>
<%= form_with model: @flights, url: flights_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :departure_airport, "Departure Airport" %>
    <%= form.select :departure_airport, options_for_select(@airports) %>
  </div>
  <div>
    <%= form.label :arrival_airport, "Arrival Airport" %>
    <%= form.select :arrival_airport, options_for_select(@airports) %>
  </div>
  <div>
    <%= form.label :available_seats, "Number of passengers" %>
    <%= form.number_field :available_seats %>
  </div>
  <div>
    <%= form.label :depart_date, "Departure date" %>
    <%= form.date_field :depart_date %>
  </div>
  <div>
    <%= form.submit "Search flights" %>
  </div>
<% end %>
